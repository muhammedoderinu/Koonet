<?xml version="1.0" encoding="utf-8"?>

<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/refreshLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    tools:context=".SellerProfilePage">


    <FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/sellerProfilePicss"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity='center_horizontal'
            android:layout_marginTop="50dp"
            android:background="@drawable/pc"
            app:civ_border_color="@color/white"
            app:civ_fill_color="@color/black" />


    <ImageButton
        android:id="@+id/profilePicsEdit"
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/camera" />

</FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/savePicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Save picture"
            android:textColor="@color/pink" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="26dp"
        android:layout_gravity="center_horizontal">


        <TextView
            android:id="@+id/userNameEdit"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="280dp"
            android:layout_marginTop="5dp"
            android:text="Edit Profile"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="16sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/userNameProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:hint="UserName"
            android:textColor="#D7D1C9C9" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/sellerEmailProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:hint="Email"
            android:textColor="#D7D1C9C9" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/sellerPhoneNumberProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:hint="Phone Number"
            android:textColor="#D7D1C9C9" />

        <Button
            android:id="@+id/saveProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingRight="16dp"
            android:text="Save"
            android:layout_gravity="bottom|right"/>




    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom|center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Swipe to Refresh"/>
    </LinearLayout>

</LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>